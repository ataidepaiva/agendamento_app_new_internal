rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      return get(/databases/$(database)/documents/usuarios/$(request.auth.uid)).data.tipo == "admin";
    }

    match /agendamentos/{agendamentoId} {
      allow read: if request.auth != null && (isAdmin() || request.auth.uid == resource.data.userId);
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && isAdmin();
    }

    match /horarios/{document=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && isAdmin();
    }

    match /municipios/{document=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && isAdmin();
    }

    match /usuarios/{userId} {
      allow read, write: if request.auth != null && (isAdmin() || request.auth.uid == userId);
    }

    match /veiculos/{veiculoId} {
      allow read, write: if request.auth != null && isAdmin();
    }

    match /motoristas/{motoristaId} {
      allow read, write: if request.auth != null && isAdmin();
    }
  }
}